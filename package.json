{
  "name": "stream-limit-throughput",
  "version": "1.0.1",
  "description": "Advanced throughput throttling for node streams",
  "engines": {
    "node": ">=6.0"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tracker1/node-stream-limit-throughput.git"
  },
  "keywords": [
    "streams",
    "throttling",
    "out-of-memory",
    "performance",
    "rate-limit"
  ],
  "author": "Michael J. Ryan <tracker1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tracker1/node-stream-limit-throughput/issues"
  },
  "homepage": "https://github.com/tracker1/node-stream-limit-throughput#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-modern-node": "^3.2.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "babel-template": "^6.23.0",
    "babel-types": "^6.23.0",
    "bluebird": "^3.4.7",
    "coveralls": "^2.11.16",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "jest": "^18.1.0",
    "mz": "^2.6.0",
    "rimraf": "^2.5.4",
    "shelljs": "^0.7.6",
    "split2": "^2.1.1"
  },
  "dependencies": {
    "is-stream": "^1.1.0",
    "through2": "^2.0.3"
  },
  "babel": {
    "presets": [
      [
        "modern-node",
        {
          "loose": true
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false,
          "regenerator": true,
          "moduleName": "babel-runtime"
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ],
        "sourceMaps": true,
        "retainLines": true
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": "off"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    }
  },
  "jest": {
    "verbose": true,
    "rootDir": "./",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/\\.((no)?test|disabled|unsafe)\\.js$/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "lint": "eslint ./",
    "cleanup": "rimraf temp && rimraf dist",
    "pretest": "npm run cleanup && && npm run lint && npm run build",
    "test": "jest --coverage",
    "posttest": "npm run cleanup",
    "build": "babel-node tools/scripts/build.js",
    "publish": "echo \"Error: do not publish this project from source directory.\" && exit 1",
    "publish-major": "npm version major && git push origin master && git push --tags",
    "publish-minor": "npm version minor && git push origin master && git push --tags",
    "publish-patch": "npm version patch && git push origin master && git push --tags"
  }
}
